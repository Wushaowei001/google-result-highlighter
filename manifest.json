{
  "name": "Google Result Highlighter",
  "description": "Highlight google results from trusted websites.",
  "version": "0.2",
  "permissions": [
    "*://www.google.com.tr/*", // TODO: add all countries
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.google.com.tr/*"], // TODO: add all countries
      "js": ["highlight.js"],
      "run_at": "document_end"
    }
  ],
  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },
  "manifest_version": 2,
  "options_page": "config.html"
}
